# This file contains build options for a GEOSS installation.
GEOSS_DIR = geoss
HTML_DIR ?= /var/www/html
WEB_DIR = $(HTML_DIR)/$(GEOSS_DIR)
USER_DATA_DIR ?= /var/lib/$(GEOSS_DIR)
BIN_DIR ?= /usr/bin
LIB_DIR ?= /usr/lib/geoss
GEOSS_DBMS ?= Pg
DB_NAME ?= geoss
GEOSS_HOST ?= localhost
GEOSS_PORT ?= 5432
GEOSS_SU_USER ?= geoss
PERL_LOCATION = auto
VERSION = GEOSS 2.6.1
COOKIE_NAME = _$(DB_NAME)_GEOSSID
WEB_USER=apache
SQL_DEBUG = 0
